<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pcadapp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/thumbnail_height"
        android:background="@android:color/transparent"
        android:contentDescription="@string/image"
        android:src="@drawable/app1" />

    <EditText
        android:id="@+id/IpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:hint="@string/indirizzo_ip_server"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/IpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insertIp"
        android:text="@string/inserisci"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:orientation="horizontal"></LinearLayout>

    <EditText
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/loginText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/inserisci_testo_da_cercare"
        android:inputType="textPersonName" />



    <Button
        android:id="@+id/researchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doResearch"
        android:text="@string/ok" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:orientation="horizontal"></LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/search3wordsButton"
            android:layout_width="191dp"
            android:layout_height="match_parent"
            android:onClick="do3wordsMoreFrequent"
            android:text="@string/cerca_parole_parole_frequenti"
            android:textAlignment="center"

            />

        <EditText

            android:id="@+id/loginText3"
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/inserire_location_da_cercare"
            android:inputType="textPersonName"
            android:minWidth="88dip"
            android:minHeight="48dip" />

    </TableRow>

    <Button
        android:id="@+id/stampaTuttoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doPrint"
        android:text="@string/stampaTutto"
        android:textAlignment="center"

        />

</LinearLayout>
